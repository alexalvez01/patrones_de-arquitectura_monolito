{{!< layouts/mainLayout }}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<div class="container-fluid d-flex justify-content-center align-items-start" style="background: linear-gradient(135deg, #74ebd5, #ACB6E5); min-height: 100vh;">
    <div class="card p-5 shadow text-center" style="max-width: 500px; width: 100%; margin: 50px 50px">

     
        <h1 class="text-center mb-4 text-primary">
            <i class="bi bi-card-checklist me-2"></i>Lista de Productos
        </h1>

       
        <form action="/products/add" method="POST" class="d-flex flex-column gap-3 mb-4">
            <input class="form-control" type="text" name="name" placeholder="Nombre del producto" required>
            <input class="form-control" type="number" name="price" placeholder="Precio" required>
            <button type="submit" class="btn btn-primary w-100">
                âž• Agregar Producto
            </button>
        </form>

        {{#if products.length}}
            <h4 class="mb-3">Productos actuales</h4>
            <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                {{#each products}}
                    <div class="list-group-item d-flex justify-content-between align-items-center mb-0 border-0 ">
                        <span><strong>{{name}}</strong> - ${{price}}</span>
                        <form action="/products/delete/{{id}}" method="POST" class="m-0 p-0">
                            <button type="submit" class="btn btn-outline-danger">
                                Eliminar ðŸ—‘
                            </button>
                        </form>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p class="text-muted">TodavÃ­a no hay productos agregados.</p>
        {{/if}}

       <div class="mt-4 text-center">
            <a href="/" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver al inicio
            </a>
        </div>

    </div>
</div>