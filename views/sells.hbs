{{!< layouts/mainLayout }}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<div class="d-flex justify-content-center align-items-start bg-light" style="min-height: 100vh; padding: 2rem; background: linear-gradient(135deg, #74ebd5, #ACB6E5)">

  <div class="card shadow p-4 w-100" style="max-width: 600px;">

    <h1 class="text-center mb-4">
      <i class="bi bi-card-checklist me-2"></i>Lista de Ventas
    </h1>

   
    <form action="/sells/add" method="POST" class="mb-4 text-center sticky-top" style="top: 2rem; z-index: 10; background-color: #fff; padding: 1rem; border-radius: 5px;">
      <div class="mb-3">
        <input class="form-control text-center" type="text" name="name" placeholder="Nombre del producto" required>
      </div>
      <div class="mb-3">
        <input class="form-control text-center" type="number" name="price" placeholder="Precio" required>
      </div>
      <button type="submit" class="btn btn-success w-100">
        <i class="bi bi-plus-circle me-1"></i>Agregar venta
      </button>
    </form>

    
    <div class="d-flex flex-column gap-3" style="max-height: 400px; overflow-y: auto;">
      {{#each sells}}
        <div class="card p-3 shadow-sm text-center">
          <h5 class="mb-3">
            Se vendi√≥ el producto <strong>{{name}}</strong> por ${{price}}
          </h5>
          <form action="/sells/delete/{{id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">
              <i class="bi bi-trash me-1"></i>Eliminar
            </button>
          </form>
        </div>
      {{/each}}
    </div>

   
    <div class="mt-4 text-center">
      <a href="/" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver al inicio
      </a>
    </div>

  </div>
</div>